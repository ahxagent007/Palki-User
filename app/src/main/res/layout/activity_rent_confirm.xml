<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RentConfirmActivity"
    android:orientation="vertical"
    >

    <include
        layout="@layout/action_bar_back_press"
        ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rental Details"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="10dp"
            android:background="@color/yellow"/>
        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"


            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="5dp"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:id="@+id/LL_sedan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/car_photo"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/prvt"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/car_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sedan"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/seat_cap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 Seat Capacity"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:textSize="15dp"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"


                app:cardBackgroundColor="@color/white"
                app:cardMaxElevation="5dp"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:id="@+id/place_selector"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/round"
                            android:layout_marginBottom="20dp"
                            >

                        </ImageView>
                        <View

                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:layout_width="2dp"
                            android:background="@color/grey_light"
                            android:layout_height="50dp">

                        </View>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/purple_700"

                            >

                        </ImageView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:gravity="top">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PickUp Point"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>

                        <TextView

                            android:id="@+id/start_trip"


                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:paddingStart="20dp"


                            >


                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DropOff"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20dp"/>

                        <TextView
                            android:id="@+id/dest_trip"



                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:paddingStart="20dp"


                            >


                        </TextView>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"


            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="5dp"
            android:layout_marginBottom="5dp"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/date"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:text="TRIP DATE and TIME"

                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/time"
                     android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:text="TRIP DATE and TIME"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>


                <View
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:background="@color/grey_light"
                    android:layout_height="1dp"
                    ></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_weight="15"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:text="Round Trip"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/round_trip"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:textSize="20dp"
                        android:text="No"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_weight="15"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:text="Minimum Fare"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/min_bdt"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:textSize="20dp"
                        android:text="No"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:visibility="visible"
            android:id="@+id/promo_card"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"


            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="5dp"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                >

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:textSize="20dp"
                        android:text="No promo Added"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                    </TextView>
                </LinearLayout>

                <Button

                    android:layout_weight="2"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/add_promo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Add Promo"
                    android:background="@drawable/btnbg"></Button>



            </LinearLayout>
        </androidx.cardview.widget.CardView>








    </LinearLayout>
    <LinearLayout
        android:paddingBottom="20dp"

        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/confirm_trip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Confirm"
            android:background="@drawable/btnbg"

            ></Button>
    </LinearLayout>
</LinearLayout>