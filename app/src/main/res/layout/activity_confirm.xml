<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ConfirmActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rental"
        android:textSize="25dp"
        android:background="@color/yellow"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm a Trip"
        android:textSize="15dp"
        android:background="@color/yellow"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/IV_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_directions_car_24"
                    android:layout_weight="3"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/TV_carModel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Sedan\n(4 Seat Capacity)"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_weight="5"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/ibtn_editCar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_edit_24"
                    android:layout_weight="2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_play_circle_filled_24_red"
                        android:layout_gravity="center"
                        android:padding="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pickup Point"
                            android:textSize="15dp"/>

                        <TextView
                            android:id="@+id/TV_pickupPoint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pickup"
                            android:textSize="17dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            />


                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_stop_circle_24_blue"
                        android:layout_gravity="center"
                        android:padding="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Drop Off Point"
                            android:textSize="15dp"/>

                        <TextView
                            android:id="@+id/TV_dropPoint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Drop"
                            android:textSize="17dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_date_range_24"
                    android:layout_weight="2"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Set for the Future"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_weight="6"
                    android:textStyle="bold"
                    android:textSize="15dp"/>

                <Switch
                    android:id="@+id/S_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <EditText
                    android:id="@+id/dpc_date"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Set a Date"
                    android:textStyle="bold"
                    android:textColorHint="@color/black"
                    android:layout_weight="10"
                    android:gravity="center"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_loop_24"
                    android:layout_weight="2"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Round Trip"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_weight="6"
                    android:textStyle="bold"
                    android:textSize="15dp"/>

                <Switch
                    android:id="@+id/S_roundTrip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/LL_roundTrip">

                <EditText
                    android:id="@+id/ET_comment"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:lines="5"
                    android:scrollHorizontally="false"
                    android:hint="Any instructions?"
                    />


            </LinearLayout>

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Trip"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>








</LinearLayout>